--date=local \
--pretty='format: %C(240)%h%C(11)%d %C(12)%aN '\
'%C(2)%ar %C(10)(%ad)%n         '\
'%C(245)%s%Creset' -25 $* | \
    cut -b 1-200 | \
    sed -e 's/^/ /;s/ \* /[1;32m â€¢ [0m/;s/|/â”‚/g' | \
    less -FRXS -5

