#!/bin/sh
B=`echo -e "\e[37m"`
T=`echo -e "\e[33m"`
X=`echo -e "\e[0m"`
git ls-tree -rt --long --full-name --abbrev=7 HEAD | \
    sed -r -e 's,\w+/,    ,g' | \
    sed -r 's,([0-9]+ blob .*[\t ])([A-Za-z0-9_.]+)$,\1'$B'\2'$X',' | \
    sed -r 's,([0-9]+ tree .*[\t ])([A-Za-z0-9_.]+)$,\1'$T'\2'$X'/,'
